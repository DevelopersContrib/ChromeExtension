{
    "name": "Trackers",
    "version": "2.0.6",
    "manifest_version": 2,
    
	"browser_action": {
	"default_icon": "icon.png",
        "default_title": "Trackers",
        "default_popup": "popup.html"
    },
	"icons": { 
		"16": "icon.png",
        "48": "icon.png",
        "128": "icon.png" 
	},
	"permissions": [
		"activeTab",
		"downloads",
		"<all_urls>",
		"storage","alarms", "notifications"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	  },
	"content_scripts" : [
		{
			"matches": 	["http://*/*", "https://*/*"],
			"css":		["custom.css"],
			"js" : 		["jquery-3.3.1.js","content.js"]
		}
	]
}
